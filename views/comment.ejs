<head>
    <!-- META TAGS -->
    <meta charset="UTF-8" />

    <!-- Style Sheet-->
    <link rel="stylesheet" href="style.css"/>
    <link rel='stylesheet' id='bootstrap-css-css'  href='/stylesheets/bootstrap5152.css?ver=1.0' type='text/css' media='all' />
    <link rel='stylesheet' id='responsive-css-css'  href='/stylesheets/responsive5152.css?ver=1.0' type='text/css' media='all' />
    <link rel='stylesheet' id='pretty-photo-css-css'  href='js/prettyphoto/prettyPhotoaeb9.css?ver=3.1.4' type='text/css' media='all' />
    <link rel='stylesheet' id='main-css-css'  href='/stylesheets/main5152.css?ver=1.0' type='text/css' media='all' />
    <link rel='stylesheet' id='custom-css-css'  href='/stylesheets/custom5152.html?ver=1.0' type='text/css' media='all' />


    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="js/html5.js"></script></script>
    <![endif]-->

</head>

<body>
<!-- Start of Page Container -->
<div class="page-container">
    <div class="container">
        <div class="row">

            <section id="comments">

                <h3 id="comments-title">Comments</h3>

                <ol class="commentlist">

                    <% var i=0;%>
                    <% while(results[i]){%>
                    <li class="comment even thread-even depth-1" id="li-comment-2">
                        <article id="comment-2">

                            <div class="comment-meta">

                                <h5 class="author" style="color:#EE9900">
                                   <%= results[i].user_name%>
                                </h5>

                            </div><!-- end .comment-meta -->

                            <div class="comment-body">
                                <p> <%= results[i].comment_message%></p>
                            </div><!-- end of comment-body -->

                        </article><!-- end of comment -->
                    </li>
                    <% i++;%>
                    <%}%>
                </ol>

                <div id="respond">

                    <h3>Leave a Reply</h3>


                    <form action="#" method="post" id="commentform">

                        

                        <div>
                            <label for="comment">Comment</label>
                            <textarea class="span8" name="comment_message" id="comment_message" cols="58" rows="10"></textarea>
                        </div>

                        <div>
                            <input class="btn" name="submit" type="submit" id="submit"  value="Submit Comment">
                            <a href="/map" class="button button-glow button-rounded button-highlight">返回</a>
                        </div>

                    </form>

                </div>

            </section><!-- end of comments -->

        </div>
        <!-- end of page content -->


    </div>
</div>
</div>
</body>
<!-- End of Page Container -->
